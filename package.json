{
  "name": "smartcraft-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -c \"#93c5fd,#c4b5fd\" \"npm run dev:cms\" \"npm run dev:web\" --names=\"CMS,WEB\"",
    "dev:cms": "echo '🎛️ Statamic CMS at http://smartcraft-cms.test/cp'",
    "dev:web": "cd web && npm run dev",
    "build": "cd web && npm run build",
    "install": "npm run install:web && npm run install:cms",
    "install:web": "cd web && npm install",
    "install:cms": "cd cms && composer install",
    "type-check": "cd web && npm run type-check"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  },
  "workspaces": [
    "web"
  ]
}